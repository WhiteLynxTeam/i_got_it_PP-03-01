<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonBigStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_btn_big</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <!-- Другие стили для кнопки -->
    </style>

    <style name="ButtonSmallStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_btn_small</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/roboto_black</item>

    </style>

    <style name="CustomDateTextAppearance" parent="Widget.MaterialComponents.MaterialCalendar">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:color">@color/btn_background_big</item>
    </style>

    <style name="time_to_record">
        <item name="android:textAlignment">center</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintWidth_percent">0.26</item>
        <item name="android:background">@drawable/bg_time</item>
    </style>

    <style name="weekday">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:textColor">@color/no_active_lesson</item>
        <item name="layout_constraintWidth_percent">0.08</item>
        <item name="android:background">@drawable/background_day_of_week</item>
    </style>

</resources>